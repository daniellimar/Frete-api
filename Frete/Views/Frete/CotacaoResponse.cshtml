@model List<ShippingServiceModel>

<section class="mt-4 mb-5">
    <h3 class="animate-slide-in mb-3">Serviços de transporte: <small class="text-success">Disponíveis</small></h3>
    @foreach (var service in Model)
    {
        if (service.Error == false)
        {
            <div class="alert alert-info">
                <h4 class="alert-heading">Operadora: @service.CarrierCode - @service.Carrier</h4><hr>
                <div class="row">
                    <div class="col-sm-4">
                        <p><strong>Descrição do Serviço:</strong> @service.ServiceCode - @service.ServiceDescription</p>
                    </div>
                    <div class="col-sm-4">
                        <p><strong>Prazo de entrega:</strong> @service.DeliveryTime</p>
                    </div>
                    <div class="col-sm-4">
                        <p><strong>Preço de envio:</strong> R$@service.ShippingPrice</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-4">
                        <p><strong>Permitir etiqueta de compra:</strong> @(service.AllowBuyLabel ? "Sim" : "Não")</p>
                    </div>
                    <div class="col-sm-4">
                        <p><strong>Tempo de entrega original:</strong> @service.OriginalDeliveryTime</p>
                    </div>
                    <div class="col-sm-4">
                        <p><strong>Preço de envio original:</strong> R$@service.OriginalShippingPrice</p>
                    </div>
                </div>

                <hr />
                <small class="alert-footer"><strong>Tempo de resposta:</strong> @service.ResponseTime</small>
            </div>
        }
    }
</section>

<section class="mt-5 mb-5">
    <h3 class="animate-slide-in py-3">Serviços de transporte: <small class="text-warning">Indisponíveis</small></h3>
    @foreach (var service in Model)
    {
        if (service.Error != false)
        {
            <div class="alert alert-warning">
                <h4 class="alert-heading">Operadora: @service.CarrierCode - @service.Carrier</h4><hr>
                <div class="row">
                    <div class="col-sm-12">
                        <p><strong>Descrição do Serviço:</strong> @service.ServiceCode - @service.ServiceDescription</p>
                    </div>
                    <h6 class="mt-3"><b>@service.Msg</b></h6>
                </div>
                <hr />
                <small class="alert-footer"><strong>Tempo de resposta:</strong> @service.ResponseTime</small>
            </div>
        }
    }
</section>

