<div class="row">
	<div class="col-sm-8">
		<section class="mb-5 p-3">
			<h3 class="animate-slide-in mb-3">Cálculo de Frete</h3>
			<form method="POST" action="/Frete/ConsultarFrete">
				<div class="g-3">
					<div class="row mb-4">
						<div class="col-md-6">
							<label for="SellerCEP" class="form-label">CEP Origem</label>
							<input type="text" class="form-control" id="SellerCEP" name="SellerCEP" required value="04757020" maxlength="8">
							<small id="SellerCEPHelp" class="form-text text-muted">Somente números.</small>
						</div>
						<div class="col-md-6">
							<label for="RecipientCEP" class="form-label">CEP Destino</label>
							<input type="text" class="form-control" id="RecipientCEP" name="RecipientCEP" required value="12345678" maxlength="8">
							<small id="RecipientCEPHelp" class="form-text text-muted">Somente números.</small>
						</div>
					</div>
					<hr />
					<div class="row mb-4">
						<div class="col-md-6">
							<label for="ShipmentInvoiceValue" class="form-label">Valor da Fatura - Remessa</label>
							<div class="input-group mb-3">
								<div class="input-group-prepend">
									<span class="input-group-text" style="border-radius: 0px;">R$</span>
								</div>

								<input type="text" class="form-control real" id="ShipmentInvoiceValue" name="ShipmentInvoiceValue" required value="320.685" maxlength="12">
							</div>
						</div>
						<div class="col-md-6">
							<label for="ShippingServiceCode" class="form-label">Código do Serviço de Envio</label>
							<input type="text" class="form-control" id="ShippingServiceCode" name="ShippingServiceCode" value="null">
						</div>
					</div>
					<hr />
					<div class="row mb-4">
						<div class="col-md-4">
							<label for="Height" class="form-label">Altura</label>
							<input type="text" class="form-control" id="Height" name="Height" required value="2">
						</div>
						<div class="col-md-4">
							<label for="Length" class="form-label">Comprimento</label>
							<input type="text" class="form-control" id="Length" name="Length" required value="15">
						</div>
						<div class="col-md-4">
							<label for="Width" class="form-label">Largura</label>
							<input type="text" class="form-control" id="Width" name="Width" required value="29">
						</div>
					</div>
					<hr />
					<div class="row mb-4">
						<div class="col-md-6">
							<label for="Weight" class="form-label">Peso(Kg)</label>
							<input type="text" class="form-control peso" id="Weight" name="Weight" required value="0.5" maxlength="6">
						</div>
						<div class="col-md-6">
							<label for="Quantity" class="form-label">Quantidade</label>
							<input type="number" class="form-control" id="Quantity" name="Quantity" required value="2">
						</div>
					</div>
					<hr />
					<div class="row mb-4">
						<div class="col-md-6">
							<label for="RecipientCountry" class="form-label">País destinatário</label>
							<select class="form-control" id="RecipientCountry" name="RecipientCountry">
								<option value="BR">Brazil</option>
								<option value="US">United States</option>
								<option value="CN">China</option>
								<option value="JP">Japan</option>
								<option value="DE">Germany</option>
							</select>
						</div>
					</div>
					<div class="col-12">
						<button type="submit" class="btn btn-outline-success w-100 fw-bold" id="btn_salvar">
							<i class="fa fa-truck" aria-hidden="true"></i>
							Calcular
						</button>
					</div>
				</div>
			</form>
		</section>
	</div>
	<div class="col-sm-4">
		<section class="mb-5 p-3">
			<h3 class="mb-3">Histórico de Cotações</h3>
			<table class="table table-hover">
				<thead>
					<tr>
						<th scope="col">Cep <small>(Origem)</small></th>
						<th scope="col">Cotações</th>
					</tr>
				</thead>
				<tbody>
					@if (Model != null)
					{
						@foreach (var emprestimos in Model)
						{
							<tr>
								<td>@emprestimos.SellerCEP</td>
								<td>@emprestimos.Count</td>
							</tr>
						}
					}
				</tbody>
			</table>
		</section>
	</div>
</div>
<script>
	$(".real").maskMoney({
		thousands: '.',
		decimal: ','
	})
	$(".peso").maskMoney({
		thousands: '.',
		decimal: ','
	})
</script>


